<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_radius"
            android:id="@+id/txt_radius"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/black"
            android:typeface="serif"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/radius_input"
            android:layout_marginLeft="4dp"
            android:numeric="integer"
            android:nextFocusUp="@id/radius_input"
            android:nextFocusLeft="@id/radius_input"
            android:textColor="@android:color/black"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:id="@+id/textView"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_Maps"
            android:id="@+id/maps_btn"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:textStyle="bold"
            android:typeface="serif"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:singleLine="false" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyPosition: "
            android:id="@+id/txt_device_position"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_home"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:dividerHeight="2dp"
        android:descendantFocusability="blocksDescendants"
        android:drawSelectorOnTop="false"
        style="@style/Base.Widget.AppCompat.ListView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>